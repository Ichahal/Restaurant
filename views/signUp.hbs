<main>
    <h1>Sign Up</h1>
    <form action="/SignUp" method="post">
        <div id="userType">
            <label for="customer">Customer</label>
            <input type="radio" name="user" id="rd_customer" onchange="changeForm()" value="CUSTOMER" checked>
            <label for="driver">Driver </label>
            <input type="radio" name="user" id="rd_driver" onchange="changeForm()" value="DRIVER">
        </div>
        <div>
            <label for="userId">User Id: </label>
            <input type="text" name="userId" id="userId">
        </div>
        <div>
            <label for="password">Password: </label>
            <input type="password" name="password" id="password">
        </div>
        <div>
            <label for="name">Name: </label>
            <input type="text" name="name" id="name">
        </div>
        <div>
            <label for="phone">Phone Number:</label>
            <input type="text" name="phone" id="phone">
        </div>

        <div class="driver">
            <h3>
                Car Information
            </h3>
        </div>
        <div class="driver">
            <label for="licensePlate">License Plate:</label>
            <input type="text" name="licensePlate" id="licensePlate">
        </div>
        <div class="driver">
            <label for="vehicleModel">Vehicle Model:</label>
            <input type="text" name="vehicleModel" id="vehicleModel">
        </div>
        <div class="driver">
            <label for="color">Color:</label>
            <input type="text" name="color" id="color">
        </div>
        <div class="customer">
            <label for="address">Address:</label>
            <input type="text" name="address" id="address">
        </div>
        <button type="submit">SingUp</button>
    </form>
    {{#if ErrorMsg}}
    <p>{{ErrorMsg}}</p>
    {{/if}}
</main>